- title "Manage Accounts"

- if user_can? :create, User
  %div
    = link_to 'Add User', new_admin_user_path
  
%table.users-list
  - @users.each_with_index do |user, index|
    %tr{:class => "user_#{index + 1}"}
      %td= "#{user.first_name}"
      %td= "#{user.last_name}"
      %td= "#{user.id}"
      %td= "#{user.department}"
      %td
        = link_to user.email, edit_admin_user_path(:id => user.id)
      %td= user.roles
      %td= user.status
    %tr
      %td{:colspan => 7}
        %div.list_apps_main
          %table.user-apps
            %tr
              %td= "Applications"
              %td= "Roles"
            - user.clients.sort_by(&:name).each do |client|
              %tr
                %td
                  = client.name.to_s
                %td
                  = client.access_rights.find_by_user_id(user.id).roles.to_s